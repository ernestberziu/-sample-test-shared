{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "jsx": "react",
    "declaration": true ,
    "declarationMap": true ,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true ,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true ,
    "noUnusedParameters": true ,
    "noImplicitReturns": true ,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSources": true 
  },
  "include": ["src"],
}
